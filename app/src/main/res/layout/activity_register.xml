<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/bg_register" />

    <com.example.fisrthomework.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@id/register_name"
        app:layout_constraintStart_toStartOf="@id/register_name"
        app:layout_constraintTop_toTopOf="@id/register_name" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_lock"
        app:layout_constraintBottom_toBottomOf="@id/register_secret"
        app:layout_constraintStart_toStartOf="@id/register_secret"
        app:layout_constraintTop_toTopOf="@id/register_secret" />

    <EditText
        android:id="@+id/register_secret"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/edit_shape"
        android:maxLength="20"
        android:text="          密码"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/edit_shape"
        android:maxLength="20"
        android:text="          用户名"
        app:layout_constraintBottom_toTopOf="@id/register_secret"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/but_register"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/register_login_shape"
        android:gravity="center"
        android:text="注册"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/register_secret" />

</androidx.constraintlayout.widget.ConstraintLayout>